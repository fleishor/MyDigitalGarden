<x_post_ejs>
   <!-- Banner -->
   <%- partial('_partial/banner.ejs', {
    mainText: page.title || theme.default_post_title || __('default_post_title'),
    secondaryText: page.date ? page.date.format(config.date_format) : '',
    faIconCss: page.icon || theme.default_post_icon || ''}) %>

   <!-- Content -->
   <div class="w-100 ph2 ph4-m ph5-l">
      <div class="content">
         <div class="fl w-100 w-80-l mw9 left pr4-ns pr0-m mb4 br-l b--light-gray post-content">
            <h1>
               <%- page.title %>
            </h1>
            <div>
               <%- page.description %>
            </div>

            <!-- TOC -->
            <%- toc(page.content, {list_number: true}) %>

            <!-- Main Post Content -->
            <%- page.content %>
         </div>
         <!-- right side bar-->
         <div class="fl w-100 w-20-l pl1-ns mb4">

            <!-- Widget 1: Tags -->
            <% if (page.tags && page.tags.length) { %>
            <%- partial('_partial/widget-tags', {item: page}) %>
            <% } %>

            <!-- Widget 2: ExternalLinks -->
            <% if (page.external_links && page.external_links.length) { %>
               <%- partial('_partial/widget-external-links', {item: page}) %>
               <% } %>
   
         </div>
      </div>
   </div>
</x_post_ejs>