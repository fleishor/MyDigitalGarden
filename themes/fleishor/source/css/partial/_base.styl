body
  -webkit-backface-visibility: hidden;
  font-family $main-font

.vh-40
  height 40vh

.bg-1
   background-color grey

.bg-banner
   background-image linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 1)), url("/images/cover_1280_960.jpg")
   background-size cover

.pab-100px
  padding-bottom 100px

.w8
  width 64rem

.tj
  text-align justify

.header-icon
  font-size 30vh
  opacity 0.4
  position absolute
  bottom -3rem
  right 6rem

.text-main-color
  color $main-color

.border-color
  border-color white

.hover-border-main-color
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  &:hover
    border-color $main-color

.hover-text-main-color
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  &:hover
    color $main-color

.cursor-default {
  cursor: default;
}